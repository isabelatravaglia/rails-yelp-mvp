<h1>Restaurant <%= @restaurant.name %> </h1>
<h3>Category: <%= @restaurant.category.capitalize %> </h3>
<h3>Address: <%= @restaurant.address %> </h3>
<h3>Phone Number: <%= @restaurant.phone_number %> </h3>
<h3>Reviews</h3>
<% @reviews.each do |r| %>
  <p> <%= r.content %> - rate <%= r.rating %> </p>
<% end %>

<%= link_to 'Add a review to this restaurant', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<br>
<%= link_to 'Back to Restaurants', restaurants_path, class: "btn btn-primary"%>

